<?xml version="1.0"?>
<rdf:RDF xmlns="http://www.semanticweb.org/dataact#"
     xml:base="http://www.semanticweb.org/dataact"
     xmlns:dpv="https://w3c.github.io/dpv/2.2/dpv/#"
     xmlns:owl="http://www.w3.org/2002/07/owl#"
     xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:xml="http://www.w3.org/XML/1998/namespace"
     xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
     xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
     xmlns:dataact="http://www.semanticweb.org/dataact#">
    
    <owl:Ontology rdf:about="http://www.semanticweb.org/dataact/contracts/b2c-charlie">
        <owl:imports rdf:resource="http://www.semanticweb.org/dataact"/>
        <rdfs:comment>B2C Contract Scenario – Toggle between Article 4.1 COMPLIANCE and VIOLATION using the commented sections below.</rdfs:comment>
        <rdfs:label>Charlie's Smart Watch Contract</rdfs:label>
    </owl:Ontology>

    <!-- ============================================ -->
    <!-- SCENARIO: Charlie's Smart Watch Data Access  -->
    <!-- ============================================ -->
    
    <!-- Consumer User -->
    <owl:NamedIndividual rdf:about="http://www.semanticweb.org/dataact#charlie">
        <rdf:type rdf:resource="http://www.semanticweb.org/dataact#ConsumerUser"/>
        <ownsOrUses rdf:resource="http://www.semanticweb.org/dataact#smartWatch1"/>
        <requestsAccessTo rdf:resource="http://www.semanticweb.org/dataact#charlieHealthData"/>
        <rdfs:label>Charlie</rdfs:label>
        <rdfs:comment>Consumer who owns a smart watch and requests access to health data</rdfs:comment>
    </owl:NamedIndividual>
    
    <!-- Connected Product -->
    <owl:NamedIndividual rdf:about="http://www.semanticweb.org/dataact#smartWatch1">
        <rdf:type rdf:resource="http://www.semanticweb.org/dataact#ConnectedProduct"/>
        <generatesData rdf:resource="http://www.semanticweb.org/dataact#charlieHealthData"/>
        <manufacturerIdentifier>WATCH-2024-CH001</manufacturerIdentifier>
        <productCategory>Wearable Health Device</productCategory>
        <rdfs:label>Smart Watch 1</rdfs:label>
    </owl:NamedIndividual>
    
    <!-- Product Data -->
    <owl:NamedIndividual rdf:about="http://www.semanticweb.org/dataact#charlieHealthData">
        <rdf:type rdf:resource="http://www.semanticweb.org/dataact#ProductData"/>
        <rdf:type rdf:resource="https://w3c.github.io/dpv/2.2/dpv/#PersonalData"/>
        <isGeneratedBy rdf:resource="http://www.semanticweb.org/dataact#smartWatch1"/>
        <isMachineReadable rdf:datatype="http://www.w3.org/2001/XMLSchema#boolean">true</isMachineReadable>
        <isPersonal rdf:datatype="http://www.w3.org/2001/XMLSchema#boolean">true</isPersonal>
        <hasDescription>Heart rate, steps, sleep patterns, and activity data</hasDescription>
        <rdfs:label>Charlie Health Data</rdfs:label>
    </owl:NamedIndividual>
    
    <!-- Data Holder (Manufacturer) -->
    <owl:NamedIndividual rdf:about="http://www.semanticweb.org/dataact#watchManufacturer">
        <rdf:type rdf:resource="http://www.semanticweb.org/dataact#DataHolder"/>
        <rdf:type rdf:resource="http://www.semanticweb.org/dataact#Manufacturer"/>
        <dpv:hasData rdf:resource="http://www.semanticweb.org/dataact#charlieHealthData"/>

        <!-- #=== COMPLIANCE BLOCK START ===# -->
        <!-- Uncomment this line for COMPLIANT scenario -->
        <performsLegalAction rdf:resource="http://www.semanticweb.org/dataact#action_dataProvision_charlie"/>
        <!-- #=== COMPLIANCE BLOCK END ===# -->

        <!-- #=== VIOLATION TOGGLE ===#
        Comment out the above performsLegalAction line
        to simulate violation of Article 4(1)
        -->

        <rdfs:label>Watch Manufacturer</rdfs:label>
        <rdfs:comment>
            Manufacturer holds Charlie's data.
            When performsLegalAction is active → COMPLIANT.
            When commented out → VIOLATION (no data provision performed).
        </rdfs:comment>
    </owl:NamedIndividual>
    
    <!-- B2C Data Sharing Agreement -->
    <owl:NamedIndividual rdf:about="http://www.semanticweb.org/dataact#b2cSharing_charlie">
        <rdf:type rdf:resource="http://www.semanticweb.org/dataact#B2CDataSharing"/>
        <governedBy rdf:resource="http://www.semanticweb.org/dataact#contract_charlie"/>
        <rdfs:label>B2C Sharing - Charlie</rdfs:label>
    </owl:NamedIndividual>
    
    <!-- Contract -->
    <owl:NamedIndividual rdf:about="http://www.semanticweb.org/dataact#contract_charlie">
        <rdf:type rdf:resource="http://www.semanticweb.org/dataact#DataSharingAgreement"/>
        <dpv:hasRecipient rdf:resource="http://www.semanticweb.org/dataact#charlie"/>
        <agreementDate rdf:datatype="http://www.w3.org/2001/XMLSchema#dateTime">2024-01-15T10:00:00Z</agreementDate>
        <rdfs:label>Charlie's Smart Watch Contract</rdfs:label>
    </owl:NamedIndividual>
    
    <!-- #=== COMPLIANCE BLOCK START ===# -->
    <!-- Uncomment this entire block for COMPLIANT scenario -->
    <owl:NamedIndividual rdf:about="http://www.semanticweb.org/dataact#action_dataProvision_charlie">
        <rdf:type rdf:resource="http://www.semanticweb.org/dataact#DataProvision"/>
        <hasProvider rdf:resource="http://www.semanticweb.org/dataact#watchManufacturer"/>
        <hasRecipient rdf:resource="http://www.semanticweb.org/dataact#charlie"/>
        <providesData rdf:resource="http://www.semanticweb.org/dataact#charlieHealthData"/>
        <hasLegalBasis rdf:resource="http://www.semanticweb.org/dataact#Article4_1_DataAct"/>
        <actionDate rdf:datatype="http://www.w3.org/2001/XMLSchema#dateTime">2024-01-20T09:00:00Z</actionDate>
        <rdfs:label>Data Provision to Charlie</rdfs:label>
        <rdfs:comment>Action fulfilling Article 4(1) — user received requested data in a machine-readable format.</rdfs:comment>
    </owl:NamedIndividual>
    <!-- #=== COMPLIANCE BLOCK END ===# -->

    <!-- #=== VIOLATION TOGGLE ===#
    Comment out the above DataProvision block
    to simulate the absence of the data transfer (violation).
    -->

    <!-- Legal Reference -->
    <owl:NamedIndividual rdf:about="http://www.semanticweb.org/dataact#Article4_1_DataAct">
        <rdf:type rdf:resource="http://www.semanticweb.org/dataact#LegalReference"/>
        <hasLegalSource>Regulation (EU) 2023/2854 – Data Act</hasLegalSource>
        <hasArticleNumber>4(1)</hasArticleNumber>
        <rdfs:label>Article 4(1) – User Access Rights</rdfs:label>
    </owl:NamedIndividual>

</rdf:RDF>
